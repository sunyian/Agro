<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/jiecao_Player"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>

    <RelativeLayout
        android:id="@+id/play_menu"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/jiecao_Player"
        android:background="#FFFFFF">
        <ImageView
            android:id="@+id/collect"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/star"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp" />
        <TextView
            android:id="@+id/collect_text"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:text="收藏"
            android:textSize="15dp"
            android:layout_toRightOf="@id/collect"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/like"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/like"
            android:layout_toRightOf="@id/collect_text"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp" />
        <TextView
            android:id="@+id/like_text"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:textSize="15dp"
            android:text="点赞"
            android:layout_toRightOf="@id/like"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/share"
            android:layout_toRightOf="@id/like_text"
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/share_text"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:text="分享"
            android:layout_toRightOf="@id/share"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textStyle="bold"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E8E8E8"/>
    </RelativeLayout>
    <!--视频简介-->
    <RelativeLayout
        android:id="@+id/video_introduction"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/play_menu">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/up_headimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/lunb10"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/up_headimage"
            android:text="秋田123"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/introduction"
            android:layout_below="@id/up_headimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="one ok rock乐团将在上海举办巡演wwwww"/>
        <View
            android:background="#E8E8E8"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <!--评论-->
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/video_introduction"
        android:layout_above="@id/send_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_view">
    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/send_comment"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <EditText
            android:layout_marginBottom="5dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/paper_plane"/>
    </LinearLayout>

</RelativeLayout>