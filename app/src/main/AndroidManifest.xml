<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zy.agro">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/QMUI.Compat.NoActionBar">
        <activity android:name=".MyActivity.AdActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MyActivity.GuideActivity" />
        <activity
            android:name=".MyActivity.LoginActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".MyActivity.SignupActivity"
            android:launchMode="singleTask" />
        <activity android:name=".MyActivity.InfoActivity" />
        <activity
            android:name=".MyActivity.ChangePasswordActivity"
            android:launchMode="singleTask" />
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".video_page.more_video" />
        <activity android:name=".video_play.play_video"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" /> <!-- or android:screenOrientation="landscape"-->
    </application>

</manifest>